@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />

<div class="page">
    <MudLayout>
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => open = !open)" />
            <MudSpacer />
            <div class="title title-lg">Dakotah's Bookkeeping & Taxes</div>
            <div class="title title-sm">Dakotah's Taxes</div>
            <MudSpacer />
            <MudButton Color="Color.Info" Variant="Variant.Filled" Link="tel:7246387495">
                Call Us
            </MudButton>
        </MudAppBar>
        <MudDrawer @bind-Open="@open" Elevation="1">
            <MudDrawerHeader Style="justify-content: center">
                <img src="/assets/logo.jpg" style="width: 75%" />
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" Href="">Home</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AttachMoney" Href="fees">Fees</MudNavLink>
                @*<MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Info" Href="taxinfo">Tax Info</MudNavLink>*@
                @*<MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Construction" Href="taxtools">Tax Tools</MudNavLink>*@
                @*<MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Web" Href="taxnews">Tax News</MudNavLink>*@
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Email" Href="contactus">Contact Us</MudNavLink>
            </MudNavMenu>

            <MudSpacer />

            <img src="/assets/cert-agent.jpg" class="image-sizes" />
            <img src="/assets/e-file.png" class="image-sizes" />

        </MudDrawer>
        <MudMainContent>
            <MudContainer Class="mt-2 ml-2 mr-2 pt-3" Style="width: auto; max-width: none;">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</div>
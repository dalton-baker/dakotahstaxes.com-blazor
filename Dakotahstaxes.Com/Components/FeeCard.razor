<MudPaper Elevation="3" Style="height: 100%" Class="d-flex flex-column justify-start px-3 py-1">
    <MudText Typo="Typo.h6">@Title</MudText>

    <MudText Typo="Typo.subtitle1">@Body</MudText>

    @if (Caveat is not null)
    {
        <div style="height:5px" />
        <MudText Typo="Typo.body2">*@Caveat</MudText>
    }

    @if (Price is not null)
    {
        <div style="height:10px" />
        <MudText Typo="Typo.button" Color="Color.Info" Class="mt-2 mt-auto">@Price</MudText>
    }
</MudPaper>